{
  "manifest_version": 2,
  "name": "Axie Explorer",
  "version": "1.0",
  "description": "Show more information of Axies attributes in the marketplace",
  "icons": {
    "96": "icons/icon96.png",
    "48": "icons/icon48.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "browser_action": {
    "default_icon": "icons/icon48.png",
    "default_title": "Axie Explorer",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "*://marketplace.axieinfinity.com/*"
      ],
      "js": [
        "options.js",
        "traitmapping.js",
        "contentScript.js"
      ]
    }
  ],
  "background": {
    "scripts": [
      "options.js",
      "vendor/web3.min.js",
      "background.js"
    ]
  },
  "web_accessible_resources": [
    "body-parts.json"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "addon@example.com"
    }
  }
}